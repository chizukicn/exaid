{
    "name": "@openapi-export/monorepo",
    "private": true,
    "version": "0.0.2",
    "description": "openapi export to typescript",
    "files": [
        "dist/*"
    ],
    "keywords": [
        "openapi"
    ],
    "scripts": {
        "build": "rimraf packages/*/dist && pnpm -r --filter=./packages/* run build",
        "play": "pnpm -r --filter=./playground dev",
        "release": "bumpp package.json packages/*/package.json --commit --push --tag",
        "pub": "pnpm build && pnpm -r --filter publish --access public",
        "postinstall": "husky install"
    },
    "author": "apateat",
    "license": "MIT",
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^21.0.3",
        "@rollup/plugin-json": "^4.1.0",
        "@types/node": "^17.0.23",
        "bumpp": "^7.1.1",
        "chokidar": "^3.5.3",
        "esbuild": "^0.14.31",
        "esno": "^0.16.3",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.7",
        "openapi-types": "^12.0.0",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.70.1",
        "rollup-plugin-dts": "^4.2.0",
        "rollup-plugin-esbuild": "^4.8.2",
        "typescript": "^4.6.3",
        "unbuild": "^0.7.6"
    }
}
