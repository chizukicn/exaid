{
  "name": "@exaid/monorepo",
  "version": "0.1.2",
  "private": true,
  "description": "openapi export to typescript",
  "author": "chizuki",
  "license": "MIT",
  "keywords": [
    "openapi",
    "exaid"
  ],
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "rimraf packages/*/dist && pnpm -r --filter=./packages/* run build",
    "play": "pnpm -r --filter=./playground dev",
    "stub": "pnpm -r --filter=./packages/* stub",
    "bump": "bumpp package.json packages/*/package.json --commit --push --tag",
    "prepare": "npx simple-git-hooks",
    "lint": "eslint --cache --ext .ts,.tsx .",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "up:deps": "taze major"
  },
  "devDependencies": {
    "@types/node": "^20.8.4",
    "bumpp": "^9.2.0",
    "esno": "^0.17.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.11.3",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
