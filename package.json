{
    "name": "@exaid/monorepo",
    "private": true,
    "version": "0.1.1",
    "description": "openapi export to typescript",
    "files": [
        "dist/*"
    ],
    "keywords": [
        "openapi",
        "exaid"
    ],
    "scripts": {
        "build": "rimraf packages/*/dist && pnpm -r --filter=./packages/* run build",
        "play": "pnpm -r --filter=./playground dev",
        "stub": "pnpm -r --filter=./packages/* stub",
        "bump": "bumpp package.json packages/*/package.json --commit --push --tag",
        "postinstall": "husky install"
    },
    "author": "chizuki",
    "license": "MIT",
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@types/node": "^18.6.3",
        "bumpp": "^8.2.1",
        "esno": "^0.16.3",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.8.4",
        "unbuild": "^0.9.4"
    }
}
